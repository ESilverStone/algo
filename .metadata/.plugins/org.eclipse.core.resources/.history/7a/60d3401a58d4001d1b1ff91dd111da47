package º¸µå°ÔÀÓÄÅ;

import java.util.Scanner;

public class p27159_³ë¶¯½º {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int N = sc.nextInt();
		int[] arr = new int[N+1];
		int sum = 0;
		
		for(int i=1; i<=N; i++) {
			
			arr[i] = sc.nextInt();
			
			if(arr[i-1] + 1 != arr[i]) {
				sum += arr[i];
				
			}
		}
		if(arr[1] == 1) System.out.println(sum+1);
		else			System.out.println(sum);
		
	}
}
